# Mini-Visionary Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=changeme-generate-a-secure-random-key

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/minivisionary

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email (Resend)
RESEND_API_KEY=re_your-resend-api-key-here
RESEND_FROM=Mini Visionary <support@minivisionary.soulbridgeai.com>
FROM_EMAIL=support@minivisionary.soulbridgeai.com
FROM_NAME=Mini-Visionary

# Application URLs
PUBLIC_APP_URL=https://minivisionary.soulbridgeai.com

# Deployment
GIT_SHA=
PORT=5000

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Storage (Optional - for S3/R2)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# S3_BUCKET=
